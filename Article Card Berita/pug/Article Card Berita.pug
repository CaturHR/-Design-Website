doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Article Cards
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #e9f5e1;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }

      .container {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        width: 80%;
      }

      .card {
        background-color: #b8e986;
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
      }

      .card img {
        width: 100%;
        height: auto;
        border-radius: 8px;
      }

      .card h3 {
        margin-top: 10px;
        font-size: 18px;
        color: #fff;
      }

      .card p {
        font-size: 14px;
        margin: 10px 0;
        color: #fff;
      }

      .card span {
        display: block;
        font-weight: bold;
        margin-top: 5px;
        color: #fff;
      }

      .navigation {
        position: absolute;
        bottom: 10px;
        width: 80%;
        display: flex;
        justify-content: space-between;
      }

      .navigation button {
        background-color: #b8e986;
        border: none;
        padding: 10px 20px;
        font-size: 14px;
        border-radius: 5px;
        cursor: pointer;
        color: #fff;
      }

      .navigation button:hover {
        background-color: #a6d877;
      }
  body
    .container
      each card in [
        { title: "Title", author: "Puti Wijaya", date: "20 Maret 1988" },
        { title: "Title", author: "Risa Sisi", date: "26 September 2017" },
        { title: "Title", author: "Dewi Lestari", date: "24 Mei 2001" },
        { title: "Title", author: "Fira Basuki", date: "15 Agustus 2010" },
        { title: "Title", author: "Seno Gumira Ajidarma", date: "2 April 1996" },
        { title: "Title", author: "Taufiq Ismail", date: "9 Juli 1992" }
      ]
        .card
          img(src="Berita.jpg", alt="Newspaper Image")
          h3= card.title
          p Lorem ipsum dolor sit amet, consectetur adipiscing elit.
          span Penulis: #{card.author}
          span #{card.date}
    .navigation
      button Prev
      button Next
