doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Article Cards
    style.
      /* css */
      body {
          font-family: Arial, sans-serif;
          background-color: #e9f5e1;
          display: flex;
          justify-content: center;
          align-items: center;
          height: 100vh;
      }

      .container {
          display: grid;
          grid-template-columns: repeat(3, 1fr);
          gap: 20px;
          width: 80%;
      }

      .card {
          background-color: #b8e986;
          border-radius: 8px;
          padding: 15px;
          text-align: center;
          box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
      }

      .card img {
          width: 200px;
          height: 200px;
          border-radius: 8px;
      }

      .card h3 {
          margin-top: 10px;
          font-size: 18px;
          color: #fff;
      }

      .card p {
          font-size: 0.875em;
          margin: 10px 0;
          color: #fff;
      }

      .card span {
          display: block;
          font-weight: bold;
          margin-top: 5px;
          color: #fff;
      }

      .navigation {
          position: absolute;
          bottom: 10px;
          width: 80%;
          display: flex;
          justify-content: space-between;
      }

      .navigation button {
          background-color: #b8e986;
          border: none;
          padding: 10px 20px;
          font-size: 14px;
          border-radius: 5px;
          cursor: pointer;
          color: #fff;
      }

      .navigation button:hover {
          background-color: #a6d877;
          color: #0015ff;
      }

